<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<!--    tools:context=".view.UpdatedSplash">-->

    <ImageView
        android:id="@+id/img"
        android:layout_width="414dp"
        android:layout_height="915dp"
        android:scaleType="centerCrop"
        android:src="@drawable/splashscreen2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimation"
        app:lottie_autoPlay="true"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/cat_in_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/RepotDepotLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_logo_dark_cat" />

        <TextView
            android:id="@+id/slogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/RepotDepotLogo"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/app_name_font"
            android:text="Repo Depot"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/slogan"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="70dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/black"
            android:visibility="invisible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="www.repotTheDepot.com"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_in_Button_main"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_below="@id/slogan"
            android:layout_centerInParent="true"
            android:layout_marginTop="70dp"
            android:elevation="0dp"
            android:backgroundTint="@color/fui_bgGitHub"
            android:drawableLeft="@drawable/github_icon"
            android:paddingHorizontal="12dp"
            android:text="@string/sign_in_with_github"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>